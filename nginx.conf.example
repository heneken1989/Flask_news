# Example Nginx configuration for Flask app
# Copy this to /etc/nginx/sites-available/flask-app
# Then create symlink: sudo ln -s /etc/nginx/sites-available/flask-app /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name your-domain.com www.your-domain.com;

    # Logging
    access_log /var/log/nginx/flask-app-access.log;
    error_log /var/log/nginx/flask-app-error.log;

    # Serve static files directly from Nginx (faster)
    # IMPORTANT: Update this path to your actual Flask static directory
    location /static {
        alias /path/to/your/flask/static;
        expires 30d;
        add_header Cache-Control "public, immutable";
        
        # CORS headers if needed
        add_header Access-Control-Allow-Origin *;
    }

    # Proxy all other requests to Flask app
    location / {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Optional: SSL configuration (uncomment and configure if using HTTPS)
    # listen 443 ssl http2;
    # ssl_certificate /path/to/certificate.crt;
    # ssl_certificate_key /path/to/private.key;
}

